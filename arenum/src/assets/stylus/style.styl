@import 'common/vars'
@import 'common/mixins'

webfont('Graphik', 'Graphik/GraphikLCG-Light', 300)
webfont('Graphik', 'Graphik/GraphikLCG-Regular', 400)
webfont('Graphik', 'Graphik/GraphikLCG-Semibold', 500)

*, *:before, *:after {
  box-sizing border-box
}

body {
  margin 0
  font-family 'Graphik', sans-serif
  font-weight 400
  font-style normal
  font-size $fontSize
  line-height $lineHeight
  color $grey
}